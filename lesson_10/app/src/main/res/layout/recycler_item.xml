<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/bridgeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginStart="@dimen/marginStart16"
        android:layout_marginBottom="@dimen/marginBottom16"
        android:layout_marginTop="@dimen/marginTop16"
        tools:srcCompat="@drawable/ic_bridge_normal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/marginStart16"
        android:layout_marginBottom="@dimen/marginBottom16"
        android:layout_marginTop="@dimen/marginTop16"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bridgeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_87"
            android:textSize="16sp"
            tools:text="Александра Невского" />

        <TextView
            android:id="@+id/bridgeTime"
            android:textColor="@color/brownish_grey_two"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="2:20 – 5:10" />
    </LinearLayout>
</LinearLayout>