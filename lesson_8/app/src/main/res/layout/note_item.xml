<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:longClickable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginStart18"
        android:layout_marginTop="@dimen/marginTop21"
        android:layout_marginEnd="@dimen/marginEnd14"
        android:backgroundTint="@android:color/transparent"
        android:text="@string/title_example"
        android:textColor="@color/black_87"
        android:textSize="@dimen/textSize16" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginStart18"
        android:layout_marginTop="@dimen/marginTop4"
        android:layout_marginEnd="@dimen/marginEnd14"
        android:layout_marginBottom="@dimen/marginBottom19"
        android:backgroundTint="@android:color/transparent"
        android:text="@string/text_example"
        android:textColor="@color/warm_grey_three"
        android:textSize="@dimen/textSIze14" />
</LinearLayout>