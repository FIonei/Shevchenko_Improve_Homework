<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="201dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/sunflower">
    <ImageButton
        tools:ignore="ContentDescription"
        android:id="@+id/titleBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back_black_24_px"
        android:background="?attr/selectableItemBackground"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp">
    </ImageButton>
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Личный профиль"
        android:textColor="@color/greyish_brown"
        android:layout_marginStart="71dp"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        >
    </TextView>
    <ImageButton
        tools:ignore="ContentDescription"
        android:id="@+id/title_edit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_edit_black_24_px"
        android:background="?attr/selectableItemBackground">
    </ImageButton>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="17dp"
            android:layout_marginEnd="15dp"
            android:background="@color/white">

            <ImageView
                tools:ignore="ContentDescription"
                android:id="@+id/imageWorker"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:src="@mipmap/img_profile_spechialist"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="center" />

            <TextView
                android:id="@+id/textWorker"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="18dp"
                android:textColor="@color/greyish_brown"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/imageWorker"
                app:layout_constraintStart_toEndOf="@id/imageWorker"
                tools:text="работник года" />


        </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>