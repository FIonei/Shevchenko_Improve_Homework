<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height">

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_margin_start"
            android:layout_marginTop="@dimen/nameText_marginTop"
            android:layout_marginBottom="@dimen/nameText_marginBottom"
            android:textSize="14sp"
            android:textColor="@color/warm_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Имя" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_margin_start"
            android:layout_marginTop="@dimen/text_marginTop"
            android:layout_marginBottom="@dimen/text_marginBottom"
            android:textSize="16sp"
            android:textColor="@color/greyish_brown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Анастасия" />

    <ImageButton
        tools:ignore="ContentDescription"
        android:id="@+id/imageButton"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_gravity="center|end"
        android:layout_marginEnd="@dimen/image_marginEnd"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_edit_black_24_px_copy" />
</androidx.constraintlayout.widget.ConstraintLayout>